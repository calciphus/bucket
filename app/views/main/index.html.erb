<h1>DataSift Elements</h1>
<h3>Total Endpoints: <%= @elements.size -%></h3>
<table id="master_table">
	<thead>
		<tr>
			<th>Path</th>
			<th>Reference</th>
			<th>Data Type</th>
			<th>Description</th>
			<th>Last Seen</th>
		</tr>
	</thead>
	<tbody>
		<% @elements.each do |e| -%>
		<tr>
			<td><%= link_to e.fullpath.gsub("."," &rarr; ").html_safe, "http://dev.datasift.com/search/site/#{e.fullpath}", :target => "_blank" -%></td>
			<td><%= e.fullpath -%></td>
			<td><%= e.datatype -%></td>
			<td><%= e.description -%></td>
			<td><%= e.updated_at -%></td>
		</tr>
		<% end %>
	</tbody>
</table>

<script>
$(document).ready(function() {
    $('#master_table').dataTable( {
        "bPaginate": false,
        "bLengthChange": false,
        "bFilter": true,
        "bSort": true,
        "bInfo": false,
        "bAutoWidth": true,
    	"aoColumns": [ 
			/* Path */   null,
			/* Reference */  { "bVisible":    false },
			/* Data Type */  null,
			/* Description */  null,
			/* Last Seen */    null
		]
    } );
} );
</script>